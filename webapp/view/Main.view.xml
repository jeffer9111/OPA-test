<mvc:View
    controllerName="student00.com.sap.training.ux402.opa.ux402opa.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <headerContent>
            <Button
                id="headerButton"
                text="Header Button"
            />
        </headerContent>
        <content>
            <Label
                id="firstNameLabel"
                text="Firstname"
            />
            <Input
                value="John"
                id="firstNameInput"
            />
            <Label
                text="Lastname"
                id="lastNameLabel"
            />
            <Input
                value="Johnson"
                id="lastNameInput"
            />
            <Button
                id="helloButton"
                text="Press me"
                press="onPress"
            />
        </content>
    </Page>
</mvc:View>
